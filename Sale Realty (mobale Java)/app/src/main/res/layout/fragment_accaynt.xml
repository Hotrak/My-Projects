<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accayntFragment"
    android:background="@color/colorAboInfBg"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorOreg"
        android:layout_marginTop="22dp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="50dp"></RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vladtumen2000@mail.ru"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="@color/colorMainText"
                android:id="@+id/login"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logout"
                android:layout_marginRight="10dp"
                android:id="@+id/exitButton"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ded"
            android:padding="20dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal" />
        <ListView
            android:layout_width="match_parent"
            android:paddingHorizontal="15dp"
            android:id="@+id/listV"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>



</FrameLayout>